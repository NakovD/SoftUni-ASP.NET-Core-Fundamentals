@model PostFormViewModel;

@{
    ViewBag.Title = "Add Post";
}

<form asp-controller="Post" asp-action="Add" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" type="text" class="form-control" id="title" name="Title">
        <span asp-validation-for="Title" class="small text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Content" class="form-label">Content</label>
        <textarea asp-for="Content" class="form-control" name="Content" id="content"></textarea>
        <span asp-validation-for="Content" class="small text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}